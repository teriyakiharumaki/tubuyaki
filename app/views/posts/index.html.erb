<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">つぶやき一覧</h1>
    <% if logged_in? %>
      <%= link_to "つぶやく", new_post_path, class: "btn btn-outline-primary" %>
    <% end %>
  </div>

  <% @posts.each do |post| %>
    <div id="<%= dom_id(post) %>" class="card mb-3 position-relative">
      <div class="card-body position-relative">
        <div class="small text-muted mb-1 position-relative z-3">
          <% if post.user.present? %>
            <strong><%= link_to post.user.name, user_path(post.user), class: "text-decoration-none" %></strong>
          <% else %>
            <strong>Unknown</strong>
          <% end %>
          ・ <%= posted_time_ago(post) %>
        </div>
        <p class="card-text mb-2"><%= simple_format(h(post.body)) %></p>
        <div class="mt-2 pt-2 border-top position-relative z-3
            d-flex justify-content-between align-items-center">
          <div class="d-inline-flex align-items-center gap-3">
            <%= render "posts/like_button", post: post %>
            <%= render "posts/repost_button", post: post %>
          </div>
          <div class="d-inline-flex gap-2">
            <% if logged_in? && post.user_id == current_user.id %>
              <%= link_to edit_post_path(post),
                class: "btn d-flex align-items-center justify-content-center",
                title: "編集" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
              <%= button_to post_path(post), method: :delete,
                data: { turbo_confirm: "このつぶやきを削除します。よろしいですか？" },
                class: "btn d-flex align-items-center justify-content-center",
                title: "削除" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            <% end %>
          </div>
        </div>
        <%= link_to "", post_path(post), class: "stretched-link" %>
      </div>
    </div>
  <% end %>
</div>