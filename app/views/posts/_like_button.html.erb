<div id="<%= dom_id(post, :like_button) %>">
  <% if logged_in? %>
    <% if post.liked_by?(current_user) %>
      <%= button_to post_like_path(post), method: :delete,
            class: "btn btn-link p-0 text-danger fs-4", data: { turbo: true } do %>
        <i class="bi bi-heart-fill"></i> <!-- 赤色の塗りつぶしハート -->
      <% end %>
    <% else %>
      <%= button_to post_like_path(post), method: :post,
            class: "btn btn-link p-0 text-muted fs-4", data: { turbo: true } do %>
        <i class="bi bi-heart"></i> <!-- グレーのアウトラインハート -->
      <% end %>
    <% end %>
  <% else %>
    <%= link_to login_path, class: "btn btn-link p-0 text-muted fs-4" do %>
      <i class="bi bi-heart"></i>
    <% end %>
  <% end %>
</div>