<%= form_with model: @post, local: true do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @post.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :body, "つぶやき", class: "form-label" %>
    <%= f.text_area :body, rows: 3, class: "form-control", placeholder: "いまどうしてる？" %>
  </div>

  <%= f.submit (post.persisted? ? "更新する" : "投稿する"), class: "btn btn-primary" %>
<% end %>